{
  "name": "chat-app",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./dist/server.js",
    "dev": "kill-port 5000 3000; npm-run-all -p dev:server dev:client",
    "dev:client": "npm run dev --prefix client",
    "dev:server": "nodemon  ./src/server.ts",
    "build": "rimraf dist/; tsc -p ."
  },
  "nodemonConfig": {
    "verbose": true,
    "ignore": [
      "client/*",
      "public/*",
      ".git",
      "node_modules/",
      "dist/"
    ],
    "delay": 500,
    "watch": "src/",
    "ext": "js,json,ts",
    "execMap": {
      "ts": "ts-node --transpile-only"
    },
    "env": {
      "NODE_ENV": "development"
    },
    "events": {
      "restart": "kill-port 5000"
    }
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "connect-mongo": "^4.5.0",
    "cookie-parser": "~1.4.4",
    "dotenv": "^10.0.0",
    "express": "~4.16.1",
    "express-session": "^1.17.2",
    "http-errors": "~1.6.3",
    "jade": "~1.11.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongoose": "^6.0.4",
    "morgan": "~1.9.1",
    "request": "^2.88.2",
    "socket.io": "^4.2.0",
    "validator": "^13.6.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/debug": "^4.1.7",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/http-errors": "^1.8.1",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/lodash": "^4.14.173",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.9.1",
    "@types/request": "^2.48.7",
    "@types/validator": "^13.6.3",
    "kill-port": "^1.6.1",
    "nodemon": "^2.0.12",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "ts-node": "^10.2.1",
    "tslib": "^2.3.1",
    "typescript": "^4.4.2"
  }
}
